    "target": "es2015",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {}
